    "@nestjs/swagger": "^7.1.1",
    "@nestjs/throttler": "^5.1.2",
    "@nestjs/typeorm": "^10.0.2",
    "@types/express": "^4.17.17",
    "amqp-connection-manager": "^4.1.14",
