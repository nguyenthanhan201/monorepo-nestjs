  "scripts": {
    "build:api": "nest build api",
    "build:transcoder": "nest build transcoder",
    "build:blog": "nest build blog",
    "build": "npm run build:api && npm run build:auth",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node start",
    "start:dev": "nest start --watch",
    "dev:api": "nest start api --watch",
    "dev:transcoder": "nest start transcoder --watch",
    "dev:blog": "nest start blog --watch",
    "start:debug": "nest start --debug --watch",
    "start:transcoder": "node dist/apps/transcoder/apps/transcoder/src/main",
    "start:api": "node dist/apps/api/apps/api/src/main",
    "start:blog": "node dist/apps/blog/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
